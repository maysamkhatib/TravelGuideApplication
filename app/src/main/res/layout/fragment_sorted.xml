<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SortedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            android:fontFamily="@font/inter_extrabold"
            android:text=" Sorted"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="296dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="1dp"
            android:textOff="Ascending"
            android:textOn="Descenging" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dollarSign"
            android:layout_width="40dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="358dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="745dp"
            android:src="@drawable/dollarsign"
            android:translationZ="1dp" />

        <ScrollView
            android:id="@+id/scrollViewSorted"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/addSorted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>

</LinearLayout>